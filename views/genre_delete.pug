extends layout 

block content 
  h1 #{title}: #{genre.name}

  if bookList.length

    p #[strong Delete the following book before attempting to delete this genre]

    div(style='margin-left:20px;margin-top:20px')

        h4 Book(s)

        dl 
        each book in bookList
          dt 
            a(href=book.url) #{book.title} by #{book.author.name}

  else 
    p Do you want to delete this Genre?

    form(method='POST' action='')
      div.form-group
        input#genreid.form-control(type='hidden',name='genreid', required='true', value=genre.id )

      button.btn.btn-primary(type='submit') Delete